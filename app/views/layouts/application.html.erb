<!DOCTYPE html>
<html>
  <head>
    <title>GiftAssigner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div style="background-color: red; color: white;">
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
